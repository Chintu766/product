<h1>Showing article details</h1>
<% if @article.image.present? %>
  <%= image_tag(@article.image.picture.url, size: "150x100") %>
<%end%>

<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>


<%= link_to'back to articles_listing',articles_path %>

<% if @article.users %>
    <br></br>
    <p><strong>liked users</strong></p>
    <% @users.each do |user| %>
      <%= user.mail %><br></br>
       <% end %>
<% end %>
